<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.scaudachuang.catlife.web.dao.CatMapper">
    <select id="getCat"
            parameterType="string"
            resultType="com.scaudachuang.catlife.web.entity.Cat">
        select * from cat
        where catclass = #{catClass};
    </select>

    <select id="getAllOwnerSimpleHaveCat"
            resultType="com.scaudachuang.catlife.web.model.SimpleHaveCatInfoBar">
        select catclass, id, catname
        from havecat
        where ownerid = #{ownerId}
        <if test="catClass != null">
            and catclass = #{catClass}
        </if>
    </select>

    <select id="getOneHaveCat"
            resultType="com.scaudachuang.catlife.web.entity.HaveCat">
        select *
        from havecat
        where ownerid = #{ownerId}
          and catclass = #{catClass}
          and id = #{id};
    </select>

    <select id="catRepos" resultType="java.lang.String">
        select cat.catClass from cat;
    </select>
    <select id="getSomeRecordBetween" resultType="com.scaudachuang.catlife.web.entity.CatLifeRecord">
        select * from catliferecord where id = #{haveCatId}
            <if test="start != null and end != null">
                and Date(reDateTime) between #{start} and #{end}
            </if>
            <if test="start == null and end != null">
                and Date(reDateTime) &lt;= #{end}
            </if>
    </select>
</mapper>